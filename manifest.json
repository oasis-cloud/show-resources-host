{
	"manifest_version": 2,
	"name": "Show IP",
	"description": "This extension can show hosts to you which the static source used",
	"version": "1.0.2",
	"author": "suanban",

	"icons": {
		"16": "icon16.png",
        "48": "icon.png",
        "128": "icon128.png"
    },
	"background": {
	    "scripts": ["js/background.js"]
	},
	"content_scripts":[
	    {
			"matches":["*://*/*"],
			"js":["js/jquery.min.js","js/content.js"],
			"css":["css/content.css"],
			"run_at" : "document_end"
	    }
	],
	"browser_action": {
		"default_icon": "icon.png",
		"default_popup": "popup.html"
	},
	"permissions": [
		"*://*/*",
		"webRequest",
		"tabs",
		"storage"
	],
	"homepage_url": "https://github.com/wanbei/show-ip"
}